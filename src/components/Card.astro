---
interface Props {
	name: string;
	description: string;
	href: string;
	tags: string[];
	emoji: string;
	featureImage: string;
	featured: boolean;
}

const { href, name, description, tags, emoji, featureImage, featured } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{emoji} {name}
			<span>&rarr;</span>
		</h2>
		<ul class="ol-tags">
			{tags.map((tag) => (
				<li class="tag">{tag}</li>
			))}
		</ul>
		<p>
			{description}
		</p>
		<p></p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-color: #e2e2e2;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: calc(1.5rem - 1px);
		border-radius: 8px;
		color: white;
		background-color: #23262d;
		opacity: 0.8;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
	.tag {
		display: inline-block;
		padding: 2px 20px;
		font-size: 16px;
		border-radius: 25px;
		background-color: #e26918;
		margin-left: 10px;
	}
	.ol-tags {
		margin-left: -50px;
		margin-top: 10px;
	}
</style>
